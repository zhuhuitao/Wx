/* deviceInfo.wxss */
page{
  background: #fff;
  line-height: 1.4;
  height: 100%;
}
.dvinfo-comm{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.dvinfo-top{
  display: flex;
  flex-direction: row;
  padding: 30rpx;
}
.info-timg{
  width: 130rpx;
  height: 130rpx;
  border: 1px solid #DCDCDC;
}
.info-tcen{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
  flex: 1;
}
.info-tname{
  font-size: 34rpx;
}
.info-tsn{
  color: #6F6F6F;
  font-size: 30rpx;
  text-transform: uppercase;
}

.info-ttds{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.tds-nb{
  color: #EF6B2B;
  font-size: 38rpx;
}
.tds-n{
  color: #6F6F6F;
  font-size: 30rpx;
  text-transform: uppercase;
}
.site-screen { 
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
} 
.site-box { 
  width: 650rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: #FAFAFA;  
  margin: -150px 50rpx 0 50rpx;  
  border-radius: 3px;  
} 
.close-cm{
  height:60rpx;
  position: relative;
  margin-top: 20rpx;
  margin-right: 30rpx;
}
.btn-close{
  height:56rpx;
  width: 56rpx;
  position:absolute;
  right: 0;
  top: 0;
}
.btn-close::before ,.btn-close::after{
  background:#191919;
  content: "";
  height:1px;
  left: 0;
  position: absolute;
  top: 50%;
  width: 100%;
  transform: rotate(45deg);
}
.btn-close::after{
  transform:rotate(-45deg); 
}
.site-inp{
  margin-bottom: 30rpx;
}
.site-inp .input{
  height: 60rpx;
  line-height: 60rpx;
  padding: 16rpx 20rpx;
  border:1px solid #DCDCDC;
  border-radius: 6rpx;
}
.pla-css{
  height: 60rpx;
  line-height: 60rpx;
  color: #6F6F6F;
}
.site-sub{
  background: #EF6B2B;
  color: #fff;
}


.dvinfo-down{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.dvinfo-litopcom{
  padding: 30rpx 0;
