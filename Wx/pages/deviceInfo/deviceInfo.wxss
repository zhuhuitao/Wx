}
.dvinfo-emp{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  text-align: center;
}
.enm-img{
  width: 464rpx;
  height: 348rpx;
  margin: 0 auto;
  margin-top: -100rpx;
}
.emp-txt{
  padding: 20rpx 0 50rpx;
}
.emp-add{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  position: relative;
  background: #EF6B2B;
  border-radius: 50%;
}
.emp-add::before{
  width:34rpx;
  height: 2rpx;
  content: "";
  position: absolute;
  background: #fff;
  top: 50%;
  left: 50%;
  margin-left: -16rpx;
}
.emp-add::after{
  height: 34rpx;
  width: 2rpx;
  content: "";
  position: absolute;
  background: #fff;
  top: 50%;
  left: 50%;
  margin-top: -16rpx;
}

